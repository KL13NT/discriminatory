- var logo = require("../../assets/logo_full.svg").default

mixin Navbar(dir, link, ar)
	.m-navbar(dir=dir)
		img(src=logo, alt="logo")

		if(ar)
			a(href="/ar/")= link

		else
			a(href="/en/")= link

mixin Header(dir, header, sub, button, link, lang, ar)
	header.m-header(dir=dir)
		div
			+Navbar(dir, lang, ar)
			.m-header-text
				h1= header
				p= sub
			m.header-links
				a(class="button info" href="/home")= button
				a(href="/explore")= link